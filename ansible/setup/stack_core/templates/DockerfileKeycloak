#https://www.keycloak.org/server/containers
FROM {{registry_dns}}/keycloak/keycloak:{{version_keycloak}} as builder

ENV KC_HEALTH_ENABLED=true
ENV KC_METRICS_ENABLED=true
ENV KC_FEATURES=token-exchange
# Install custom providers
RUN curl -sL https://github.com/aerogear/keycloak-metrics-spi/releases/download/2.5.3/keycloak-metrics-spi-2.5.3.jar -o /opt/keycloak/providers/keycloak-metrics-spi-2.5.3.jar
COPY nomadder-realm.json /data/import/nomadder-realm.json
#RUN echo $(whoami)
USER root
RUN chown -R keycloak:keycloak /data/import
USER keycloak
RUN /opt/keycloak/bin/kc.sh build
RUN opt/keycloak/bin/kc.sh import --dir /data/import --override true

FROM {{registry_dns}}/keycloak/keycloak:{{version_keycloak}}
COPY --from=builder /opt/keycloak/ /opt/keycloak/
WORKDIR /opt/keycloak
ENTRYPOINT ["/opt/keycloak/bin/kc.sh"]